{
    "include": [
        "../test/**/*",
        "../global.d.ts"
    ],
    "compilerOptions": {
        "baseUrl": "..",
        "paths": {
            "itmat-*": [
                "../packages/*/src"
            ]
        },
        "strict": true,
        "allowJs": true,
        "declaration": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "target": "es5",
        "sourceMap": true,
        "moduleResolution": "node"
    }
}