{
    "compilerOptions": {
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "target": "es5",
        "sourceMap": true,
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "**/node_modules",
        "**/build",
        "**/dist"
    ]
}