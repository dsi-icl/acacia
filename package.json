{
    "name": "itmat-broker",
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "packages/apps/**/webpack-dev-server",
            "**/babel-loader",
            "**/babel-jest"
        ]
    },
    "scripts": {
        "preinstall": "node ./scripts/hintYarn.js",
        "clean": "lerna run clean",
        "start": "lerna run --stream --parallel --scope itmat-commons --scope itmat-utils --scope itmat-job-executor --scope itmat-interface --scope itmat-ui-react start",
        "build": "lerna run --stream build",
        "publish": "lerna run tsc && lerna publish",
        "test:unit": "lerna run --stream --parallel --scope itmat-job-executor test",
        "test": "yarn run test:unit",
        "lint": "lerna run --stream --no-bail lint",
        "lint:fix": "lerna run --stream --no-bail lint:fix"
    },
    "devDependencies": {
        "lerna": "3.20.2"
    }
}