{
    "name": "itmat-broker",
    "private": true,
    "license": "MIT",
    "scripts": {
        "prepare": "husky install",
        "postinstall": "husky install",
        "preinstall": "node ./scripts/hintYarn.js",
        "start": "nx run-many --parallel=5 --projects=itmat-commons,itmat-job-executor,itmat-interface,itmat-ui-react --target=start",
        "start:ui": "nx start itmat-ui-react",
        "start:interface": "nx start itmat-interface",
        "start:executor": "nx start itmat-job-executor",
        "build": "nx run-many --all --exclude=itmat-docker --target=build",
        "build:noui": "nx run-many --all --exclude=itmat-docker,itmat-ui-react --target=build",
        "dockerise": "nx run-many --projects=itmat-docker --target=build",
        "dockerise:staging": "nx run-many --projects=itmat-docker --target=build:staging",
        "setupDatabase": "nx run-many --projects=itmat-setup --target=setup",
        "test": "nx affected --parallel=1 --target=test",
        "lint": "nx affected --target=lint",
        "lint-fix": "nx affected --target=lint-fix",
        "clean": "nx run-many --all --target=clean",
        "publish": "nx affected --target=tsc && nx affected --target=publish",
        "test:unit": "nx affected --projects=itmat-interface --target=test"
    },
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "mongodb-memory-server",
            "mongodb-memory-server/**",
            "**/mongodb-memory-server",
            "**/mongodb-memory-server/**"
        ]
    },
    "devDependencies": {
        "@babel/core": "7.18.5",
        "@babel/eslint-parser": "7.18.2",
        "@babel/eslint-plugin": "7.17.7",
        "@babel/preset-env": "7.18.2",
        "@nrwl/nx-cloud": "14.0.8",
        "@nrwl/workspace": "14.2.1",
        "@types/jest": "27.5.0",
        "babel-plugin-rewire-ts": "1.4.0",
        "eslint-config-react-app": "7.0.1",
        "eslint-plugin-cypress": "2.12.1",
        "eslint-plugin-flowtype": "8.0.3",
        "eslint-plugin-jsx-a11y": "6.5.1",
        "eslint-plugin-react": "7.30.0",
        "eslint-plugin-react-hooks": "4.5.0",
        "husky": "8.0.1",
        "nx": "14.2.1",
        "typescript": "4.7.3",
        "webpack": "5.73.0",
        "webpack-cli": "4.9.2"
    },
    "eslintConfig": {
        "extends": "./config/eslint.config.js"
    }
}