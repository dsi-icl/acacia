{
    "name": "@itmat/components",
    "version": "1.0.0",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/dsi-icl/itmat-broker.git",
        "directory": "packages/components"
    },
    "main": "src/index.tsx",
    "main:src": "src/index.tsx",
    "scripts": {
        "test": "compile-scripts test --watchAll=false --color --detectOpenHandles",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
        "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx ./src --fix"
    },
    "dependencies": {
        "@itmat/compile-scripts": "*",
        "@storybook/react": "5.3.18",
        "@testing-library/jest-dom": "5.3.0",
        "@testing-library/react": "10.0.2",
        "@testing-library/user-event": "10.0.1",
        "@types/jest": "25.2.1",
        "@types/node": "13.11.0",
        "@types/react": "16.9.32",
        "@types/react-dom": "16.9.6",
        "@typescript-eslint/eslint-plugin": "2.26.0",
        "@typescript-eslint/parser": "2.26.0",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "typescript": "3.8.3"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "../../config/eslint.config.js"
        ]
    },
    "browserslist": {
        "production": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/setupTests.{ts,tsx}",
            "!src/serviceWorker.{ts,jsx}",
            "!src/**/*.(spec|test|stories).{ts,tsx}"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 98,
                "branches": 98,
                "functions": 98,
                "lines": 98
            }
        }
    }
}