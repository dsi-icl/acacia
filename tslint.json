{
    "extends": "tslint:recommended",
    "rules": {
        "indent": [
            true,
            "spaces",
            4
        ],
        "max-line-length": {
            "severity": "warning",
            "options": {
                "limit": 250,
                "ignore-pattern": "^import |^export {(.*?)}"
            }
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "no-unused-expression": true,
        "no-unused-variable": true,
        "object-literal-sort-keys": false,
        "quotemark": {
            "severity": "warning",
            "options": [
                "single",
                "jsx-double",
                "avoid-escape",
                "avoid-template"
            ]
        },
        "trailing-comma": {
            "severity": "warning",
            "options": {
                "multiline": {
                    "objects": "never",
                    "arrays": "never",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        }
    },
    "jsRules": {
        "max-line-length": {
            "severity": "warning",
            "options": {
                "limit": 250,
                "ignore-pattern": "^import |^export {(.*?)}"
            }
        }
    }
}